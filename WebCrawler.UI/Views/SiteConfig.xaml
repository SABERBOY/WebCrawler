<Page x:Class="WebCrawler.UI.Views.SiteConfig"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      xmlns:local="clr-namespace:WebCrawler.UI.Views"
      xmlns:ctls="clr-namespace:WebCrawler.UI.Controls"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SiteConfig">

    <Page.Resources>

    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- menu bar -->
        <Grid Grid.Row="0" Grid.ColumnSpan="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="60" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Command="{Binding BackCommand}" Background="Transparent">
                <Viewbox>
                    <Path Data="{StaticResource BackIcon}" />
                </Viewbox>
            </Button>
            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="10">
                <TextBox Text="{Binding Keywords}" ctls:Placeholder.PlaceholderText="Filter websites" BorderThickness="1" Width="200" />
                <CheckBox IsChecked="{Binding Enabled}" Content="Enabled" BorderThickness="1" />
            </StackPanel>
        </Grid>

        <DataGrid Grid.Row="1"
                      Grid.Column="0"
                  Margin="10 0 10 10"
                  ItemsSource="{Binding WebsitesView}"
                  SelectedItem="{Binding SelectedWebsite}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Sorting="DataGrid_Sorting">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Rank" Binding="{Binding Rank}" />
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="150" />
                <DataGridTextColumn Header="Home" Binding="{Binding Home}" Width="300" />
                <DataGridTextColumn Header="UrlFormat" Binding="{Binding UrlFormat}" Width="300" />
                <DataGridTextColumn Header="StartIndex" Binding="{Binding StartIndex}" CanUserSort="False" />
                <DataGridTextColumn Header="ListPath" Binding="{Binding ListPath}" />
                <DataGridTextColumn Header="Registered" Binding="{Binding Registered}" />
                <DataGridTextColumn Header="Enabled" Binding="{Binding Enabled}" CanUserSort="False" />
            </DataGrid.Columns>
        </DataGrid>

        <Grid Grid.Row="1"
              Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0 0 10 10" Background="{StaticResource BackgroundLight}"
                  Visibility="{Binding SelectedWebsite, Converter={StaticResource EmptyObjectConverter}, ConverterParameter=!}">
                <Grid Margin="0 5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Content="Name" />
                    <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Editor.Name}" />

                    <Label Grid.Row="1" Grid.Column="0" Content="Rank" />
                    <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Editor.Rank}" />

                    <Label Grid.Row="2" Grid.Column="0" Content="Home" />
                    <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Editor.Home}" />

                    <Label Grid.Row="3" Grid.Column="0" Content="UrlFormat" />
                    <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Editor.UrlFormat}" />

                    <Label Grid.Row="4" Grid.Column="0" Content="StartIndex" />
                    <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding Editor.StartIndex}" />

                    <Label Grid.Row="5" Grid.Column="0" Content="ListPath" />
                    <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding Editor.ListPath}" ctls:Placeholder.PlaceholderText="Leave empty to auto detect" />

                    <Label Grid.Row="6" Grid.Column="0" Content="Notes" />
                    <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding Editor.Notes}" Height="80" TextWrapping="Wrap" AcceptsReturn="True" ScrollViewer.VerticalScrollBarVisibility="Auto" />

                    <Label Grid.Row="7" Grid.Column="0" Content="Enabled" />
                    <CheckBox Grid.Row="7" Grid.Column="1" IsChecked="{Binding Editor.Enabled}" />

                    <Grid Grid.Row="8" Grid.ColumnSpan="2" Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" Content="RESET" Command="{Binding ResetCommand}" Height="30" />
                        <Button Grid.Column="1" Content="SAVE" Command="{Binding SaveCommand}" Height="30" />
                        <Button Grid.Column="2" Content="TEST" Command="{Binding TestCommand}" Height="30" />
                    </Grid>

                </Grid>
            </Grid>


            <DataGrid Grid.Row="1" Margin="0 0 10 10" IsReadOnly="True" CanUserSortColumns="False"
                      MinHeight="100"
                      Visibility="{Binding SelectedWebsite, Converter={StaticResource EmptyObjectConverter}, ConverterParameter=!}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Test" />
                </DataGrid.Columns>
            </DataGrid>

            <DataGrid Grid.Row="2" Margin="0 0 10 10" IsReadOnly="True" CanUserSortColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Test" />
                </DataGrid.Columns>
            </DataGrid>

        </Grid>

        <Grid Grid.Row="1"
              Grid.Column="2"
              Visibility="{Binding ShowTestResult, Converter={StaticResource BinaryConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <DataGrid ItemsSource="{Binding CatalogItems}" SelectedItem="{Binding SelectedCatalogItem}" AutoGenerateColumns="True" IsReadOnly="True" CanUserSortColumns="False" Margin="0 0 10 10" />

            <Grid Grid.Row="1" Margin="0 0 10 10" Background="{StaticResource BackgroundLight}"
                  Visibility="{Binding SelectedCatalogItem, Converter={StaticResource EmptyObjectConverter}, ConverterParameter=!}">
                <Grid Margin="0 5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Content="Url" />
                    <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Article.Url}" IsReadOnly="True" />

                    <Label Grid.Row="1" Grid.Column="0" Content="Title" />
                    <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Article.Title}" IsReadOnly="True" />

                    <Label Grid.Row="2" Grid.Column="0" Content="Published" />
                    <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Article.Published}" IsReadOnly="True" />

                    <Label Grid.Row="3" Grid.Column="0" Content="Content" />
                    <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Article.Content}" Height="400" TextWrapping="Wrap" AcceptsReturn="True" ScrollViewer.VerticalScrollBarVisibility="Auto" IsReadOnly="True" />
                </Grid>
            </Grid>
        </Grid>

        <Grid Grid.RowSpan="2" Grid.ColumnSpan="3" x:Name="ProcessingOverlay" Background="#01000000" Visibility="{Binding IsProcessing, Converter={StaticResource BinaryConverter}}">
            
        </Grid>

    </Grid>
</Page>
